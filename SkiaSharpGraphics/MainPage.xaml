<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:g="clr-namespace:SkiaSharpGraphics.Graphics"
             x:Class="SkiaSharpGraphics.MainPage">

    <Grid Background="White">
        <g:GraphicsCanvas>
            <g:GraphicsCanvas.Resources>
                <ResourceDictionary>
                    <g:SolidColor Color="Blue" x:Key="Blue" />
                    <g:SolidColor Color="Red" x:Key="Red" />

                    <g:Fill Paint="{x:StaticResource Red}" x:Key="RedFill" />
                    <g:Stroke Thickness="3" Paint="{x:StaticResource Blue}" x:Key="BlueStroke" />
                </ResourceDictionary>
            </g:GraphicsCanvas.Resources>

            <g:Translate X="20" Y="120">
                <g:Rectangle
                    X="20" Y="40" Width="200" Height="100"
                    Fill="{x:StaticResource RedFill}"
                    Stroke="{x:StaticResource BlueStroke}">

                </g:Rectangle>
            </g:Translate>

            <g:Rectangle X="20" Y="40" Width="200" Height="100"
                         Fill="{x:StaticResource RedFill}"
                         Stroke="{x:StaticResource BlueStroke}" />

        </g:GraphicsCanvas>

        <Button Clicked="OnClick" Text="Click Me!" HorizontalOptions="End" VerticalOptions="Start" />
    </Grid>

</ContentPage>
